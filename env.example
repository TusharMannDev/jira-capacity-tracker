# Environment Variables for Jira Capacity Tracker
# Copy this file to .env and fill in your actual values

# Jira Configuration
JIRA_BASE_URL=https://your-jira-instance.com
JIRA_API_TOKEN=your-jira-api-token-here
JIRA_PROJECT_KEYS=PROJECT1,PROJECT2
JIRA_JQL_FILTER=project = PROJECT AND Sprint in openSprints() ORDER BY priority DESC

# Email Configuration (Optional)
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password

# Database Configuration (Optional - uses H2 by default)
# DATABASE_URL=jdbc:postgresql://localhost:5432/jira_tracker
# DATABASE_USERNAME=username
# DATABASE_PASSWORD=password

# Application Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=development
